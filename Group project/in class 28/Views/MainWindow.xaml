<Window x:Class="in_class_28.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:in_class_28.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" Background="#EAEAEA" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <!-- Gradient Background Resource -->
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4C9FE0" Offset="0.0" />
            <GradientStop Color="#80B9F0" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource WindowBackground}">
        <Border CornerRadius="20" Background="White" Padding="30" Margin="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="C:\Users\user\Downloads\Luxury Modern Swiss Watch Clock Logo.png"
Height="126" Width="214" Margin="0,-16,0,0"/>
                <!-- Title -->
                <TextBlock Text="Age Calculator" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,-22,0,20"/>

                <!-- Name Input -->
                <TextBlock Text="Enter Your Name:" FontSize="18" Foreground="#555" Margin="0,6,0,10"/>
                <TextBox x:Name="nameInput" Width="320" FontSize="15" Margin="0,10" Padding="10" BorderBrush="#4C9FE0" BorderThickness="2" Height="44" />

                <!-- Date of Birth Input (DatePicker) -->
                <TextBlock Text="Select Your Date of Birth:" FontSize="18" Foreground="#555" Margin="0,15"/>
                <DatePicker x:Name="dobDatePicker" Width="320" FontSize="16" Margin="0,10" BorderBrush="#4C9FE0" BorderThickness="2"/>

                <!-- Target Date Input (DatePicker) -->
                <TextBlock Text="Select Target Date:" FontSize="18" Foreground="#555" Margin="0,15"/>
                <DatePicker x:Name="targetDatePicker" Width="320" FontSize="16" Margin="0,10" BorderBrush="#4C9FE0" BorderThickness="2"/>

                <!-- Calculate Button -->
                <Button Content="Calculate Age" Width="320" Height="50" Background="#4C9FE0" Foreground="White" FontSize="16" FontWeight="Bold" Cursor="Hand" BorderThickness="0" 
 Margin="0,25,0,20" Click="CalculateAge_Click"/>
            </StackPanel>
        </Border>

    </Grid>

</Window>
