<Window x:Class="in_class_28.Views.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:in_class_28.Views"
        mc:Ignorable="d"
        Title="Age" Height="700" Width="800" Background="#EAEAEA" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4C9FE0" Offset="0.0" />
            <GradientStop Color="#80B9F0" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <Border CornerRadius="20" Background="White" Padding="30" Margin="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="C:\Users\user\Downloads\Luxury Modern Swiss Watch Clock Logo.png"
Height="126" Width="214" Margin="0,-16,0,0"/>
                <!-- Result Title -->
                <TextBlock Text="                  Age Calculation Result" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,20" Height="85" Width="513"/>

                <!-- Display Name and Age -->
                <TextBlock x:Name="resultDisplay" FontSize="20" Foreground="#444" HorizontalAlignment="Center" TextAlignment="Center" Width="745" Height="106"/>

                <!-- Close Button -->
                <Button Content="Close" Width="147" Height="45" Background="#4C9FE0" Foreground="White" 
                        FontSize="16" FontWeight="Bold" Cursor="Hand" Click="CloseWindow_Click" BorderThickness="0" 
                        Margin="0,41,0,20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

